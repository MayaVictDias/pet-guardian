<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/escolherImagemPet"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/profile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=" "
                android:text="Nome do usuário"
                android:textColor="@color/marromEscuro"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewPerfilCidadeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=" "
                android:text="Cidade do usuário"
                android:textColor="@color/marromEscuro"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewQuantidadePetsCadastrados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=" "
                android:text="Quantidade de pets cadastrados"
                android:textColor="@color/marromEscuro"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>