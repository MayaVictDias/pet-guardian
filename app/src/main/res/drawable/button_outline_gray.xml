<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/transparent" /> <!-- Cor de fundo transparente -->

    <!-- Estado de clique pressionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/cinzaClaro" /> <!-- Cor para quando o botão é pressionado -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <stroke
        android:width="2dp"
        android:color="@color/cinzaClaro" /> <!-- Cor amarela para o contorno -->

    <corners android:radius="12dp" /> <!-- Defina o raio dos cantos -->

</shape>
