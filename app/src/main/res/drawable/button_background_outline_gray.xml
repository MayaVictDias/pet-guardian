<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado desabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/verdeOlivaClaro" /> <!-- Cor de fundo cinza claro -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/cinzaClaro" /> <!-- Contorno -->
        </shape>
    </item>

    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cinzaClaro" /> <!-- Cor ao pressionar -->
            <corners android:radius="12dp" /> <!-- Raio dos cantos -->
            <stroke android:width="2dp" android:color="@color/cinzaClaro" /> <!-- Contorno -->
        </shape>
    </item>

    <!-- Estado padrão (editável) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Cor de fundo transparente -->
            <corners android:radius="12dp" /> <!-- Raio dos cantos -->
            <stroke android:width="2dp" android:color="@color/cinzaClaro" /> <!-- Contorno -->
        </shape>
    </item>
</selector>
