<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetGuardian" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/verdeOlivaClaro</item>
        <item name="colorSecondary">@color/azulCeuClaro</item>
        <item name="colorTertiary">@color/coralSuave</item>
        <item name="android:colorBackground">@color/begeClaro</item>
        <item name="colorAccent">@color/amareloDouradoSuave</item>
        <item name="android:textColorPrimary">@color/marromEscuro</item>
        <item name="android:statusBarColor">@color/verdeOlivaClaro</item>
        <item name="android:button">@color/amareloDouradoSuave</item>
        <!-- Cor quando o checkbox está marcado -->
        <item name="android:state_checked">@color/coralSuave</item>
    </style>

    <!-- Estilo personalizado para botões amarelos -->
    <style name="CustomButtonStyleYellowBackground" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/amareloDouradoSuave</item> <!-- Cor de fundo -->
        <item name="android:textColor">@color/marromEscuro</item> <!-- Cor do texto -->
        <item name="cornerRadius">10dp</item> <!-- Raiz de borda se necessário -->
        <item name="android:padding">12dp</item> <!-- Preenchimento -->
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Fonte da letra -->
    </style>

    <!-- Estilo personalizado para botões amarelos -->
    <style name="CustomButtonStyleNoColorOutline" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/begeClaro</item> <!-- Cor de fundo -->
        <item name="android:textColor">@color/marromEscuro</item> <!-- Cor do texto -->
        <item name="cornerRadius">10dp</item> <!-- Raiz de borda se necessário -->
        <item name="android:padding">12dp</item> <!-- Preenchimento -->
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Fonte da letra -->
    </style>

    <!-- Estilo personalizado para o botão azul -->
    <style name="CustomButtonStyleBlue" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/azulCeuClaro</item> <!-- Cor de fundo -->
        <item name="android:textColor">@color/marromEscuro</item> <!-- Cor do texto -->
        <item name="cornerRadius">0dp</item> <!-- Raiz de borda para deixar sem arredondos -->
        <item name="android:padding">12dp</item> <!-- Preenchimento -->
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Fonte da letra -->
    </style>

    <!-- Estilo personalizado para botões com fundo transparente e contorno amarelo -->
    <style name="CustomButtonStyleYellowOutline" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/transparent</item> <!-- Cor de fundo -->
        <item name="android:textColor">@color/marromEscuro</item> <!-- Cor do texto -->
        <item name="cornerRadius">10dp</item> <!-- Raiz de borda se necessário -->
        <item name="android:padding">12dp</item> <!-- Preenchimento -->
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Fonte da letra -->
    </style>

    <style name="Base.TextAppearance.AppCompat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/transparent</item> <!-- Cor de fundo -->
        <item name="android:textColor">@color/marromEscuro</item> <!-- Cor do texto -->
        <item name="android:padding">12dp</item> <!-- Preenchimento -->
        <item name="android:fontFamily">@font/nunito_medium</item> <!-- Fonte da letra -->
    </style>

    <style name="Theme.PetGuardian" parent="Base.Theme.PetGuardian" />
</resources>